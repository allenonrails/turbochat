<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do %>
  <%= render @rooms %>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: @new_room, class: 'mt-4' do |f| %>
    <div class="flex flex-row">
      <%= f.submit 'create new room', class: 'bg-indigo-500 hover:bg-indigo-600 cursor-pointer ease-in duration-300 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded' %>
    </div>
  <% end %>
<% end %>

